---
import Link from './Link.astro'

interface Props {
  href: string
  rel?: string
  target?: string
  isBlank?: boolean
  isExternal?: boolean
  class?: string
}

const {
  href,
  class: classList,
  isExternal,
  rel = '',
  target = '',
  isBlank,
  ...rest
} = Astro.props
---

<Link href={href} rel={rel} target={target} isBlank isExternal>
  <button
    type="button"
    class="text-accent-700 hover:text-white border border-accent-700 hover:bg-accent-800 focus:ring-4 focus:outline-none focus:ring-accent-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 dark:border-accent-500 dark:text-accent-500 dark:hover:text-white dark:hover:bg-accent-500 dark:focus:ring-accent-800"
    {...rest}
  >
    <slot />
  </button>
</Link>
