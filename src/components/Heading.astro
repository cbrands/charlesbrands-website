---
const headingOptions = {
  h1: 'text-4xl lg:text-6xl',
  h2: 'text-2xl lg:text-4xl',
  h3: 'text-xl lg:text-2xl',
  h4: 'text-lg lg:text-xl',
  h5: 'text-base lg:text-lg',
  h6: 'text-sm lg:text-base',
}

type Props = {
  tagName: keyof typeof headingOptions
  size: keyof typeof headingOptions
  text: string
  class?: string
}

const { tagName, size, text, class: classList } = Astro.props
const Tag = tagName
---

<Tag class:list={['default', headingOptions[size], classList]}>
  {text}
</Tag>
