---
import { type HTMLAttributes } from 'astro/types'
const headingOptions = {
  h1: 'text-4xl lg:text-6xl',
  h2: 'text-2xl lg:text-4xl',
  h3: 'text-xl lg:text-2xl',
  h4: 'text-lg lg:text-xl',
  h5: 'text-base lg:text-lg',
  h6: 'text-sm lg:text-base',
}
interface Props extends HTMLAttributes<keyof typeof headingOptions> {
  text: string
  tagName: keyof typeof headingOptions
  size: keyof typeof headingOptions
  classes?: string
}

const { text, tagName, size, class: classList, ...rest } = Astro.props
const Tag = tagName
---

<Tag
  {...rest}
  class:list={['font-bold tracking-tight', headingOptions[size], classList]}
>
  {text}
</Tag>
